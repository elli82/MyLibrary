@model MinimalAPI_Books.Models.Book

@{
    ViewData["Title"] = "DeleteBook";
}

    <form asp-action="DeleteBook">
        <input asp-for="Id" hidden />
        <div class="container border p-3">
            
        <div class="row">
            <div class="col-md-4">

                <div class="col-2">
                    <label asp-for="Title" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Title" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Author" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Author" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="YearofPublication" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="YearofPublication" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Genre" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Genre" disabled class="form-control" />
                </div>

                <div class="col-2">
                    <label asp-for="Available" class="control-label pt-2" style="font-size:20px"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Available" disabled class="form-check-input" type="checkbox" style="visibility: visible; color: gray;" />
                </div>
                <hr />
                <h2>Are you sure you want to delete this book?</h2>
                

                <div class="col-5">
                    <input type="submit" value="Delete" class="btn btn-danger" />

                </div>
            </div>
        </div>
        </div>
    </form>
<a asp-action="BookIndex">Back To List</a>
    
</>